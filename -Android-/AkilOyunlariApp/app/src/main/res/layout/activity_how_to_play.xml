<!--                    android:layout_height="match_parent"-->
<!--                    android:text="★Medium★"/>-->




<!--            </LinearLayout>-->

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/sticky_button_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="howToPlayGameListOpen"
        android:background="@drawable/ic_stickybutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/howToPlayGameListRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_red"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:fadingEdgeLength="10dp"
            android:requiresFadingEdge="vertical"
            android:background="@color/dark_red">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/closebutton_htp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="howToPlayGameListClose"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_closebutton" />

                <TextView
                    android:id="@+id/sudoku_htpgl"
                    android:tag="Sudoku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="Sudoku"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/hazineAvi_htpgl"
                    android:tag="@string/HazineAvı"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="@string/HazineAvı"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/patika_htpgl"
                    android:tag="@string/Patika"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="@string/Patika"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/sayiBulmaca_htpgl"
                    android:tag="@string/SayıBulmaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="@string/SayıBulmaca"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/sozcukTuru_htpgl"
                    android:tag="@string/SözcükTuru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="@string/SözcükTuru"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

                <TextView
                    android:id="@+id/piramit_htpgl"
                    android:tag="@string/Piramit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:fontFamily="@font/mohave_regular"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="howToPlayChangeGame"
                    android:text="@string/Piramit"
                    android:textColor="@color/f7f5fa"
                    android:textSize="37sp" />

