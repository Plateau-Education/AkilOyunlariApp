    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/aboveGridRL_ga"
        app:layout_constraintStart_toEndOf="@+id/figureLL_ga"
        app:layout_constraintTop_toBottomOf="@+id/aboveGridRL_ga">

