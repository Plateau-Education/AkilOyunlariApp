            android:layout_height="46.125dp"
            android:background="@drawable/nums_gl_bg"
            android:backgroundTint="@color/rotatebutton_selector_bgcolor"
            android:padding="11.25dp"
            android:src="@drawable/ic_reversebutton"
            android:tint="@color/f7f5fa"
            android:onClick="reverseFigure"
            tools:targetApi="lollipop" />

