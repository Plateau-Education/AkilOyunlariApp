    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridRelativeLayout"
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <View
            android:id="@+id/gridRelativeLayoutView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/figureLL_ga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveGridRL_ga"
        app:layout_constraintVertical_bias="0.3"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/figureLLrow1_ga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:tag="0"
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pentof"
                android:visibility="gone"
                tools:ignore="ContentDescription" />


            <ImageView
                android:tag="1"
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pentoi"
                android:visibility="gone"
                tools:ignore="ContentDescription" />


            <ImageView
                android:tag="2"
                android:layout_height="64dp"
                android:layout_width="48dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
