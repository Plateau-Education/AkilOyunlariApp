            <ImageView
                android:layout_width="306dp"
                android:layout_height="3dp"
                android:src="@color/near_black_blue"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_columnSpan="8"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="306dp"
                android:layout_height="3dp"
                android:src="@color/near_black_blue"
                app:layout_row="5"
                app:layout_column="0"
                app:layout_columnSpan="8"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="206dp"
                android:src="@color/near_black_blue"
                app:layout_row="0"
                app:layout_column="0"
                app:layout_rowSpan="6"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="206dp"
                android:src="@color/near_black_blue"
                app:layout_row="0"
